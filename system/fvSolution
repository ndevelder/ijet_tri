solvers
{
    "(phis|phisFinal)"
    {
        solver           GAMG;
        tolerance        1e-6;
        relTol           0.00005;
        smoother         GaussSeidel;
        directSolveCoarsest false;
        nPreSweeps       0;
        nPostSweeps      2;
	nFinestSweeps	2;
        cacheAgglomeration on;
        agglomerator     faceAreaPair;
        nCellsInCoarsestLevel 16;
	mergeLevels 1;
	maxIter 256;
    };

    "(p|pFinal)"
    {
     	solver           PCG;
        preconditioner   DIC;
        tolerance        1e-6;
        relTol           0.0;
        maxIter          256;
    };
    "(tpphi|tppsi|R)"
    {
        solver           smoothSolver;
        smoother	 GaussSeidel;
        tolerance        1e-10;
        relTol           0.00;
        maxIter          100;
        minIter          1;
    };
    "(k|epsilon)"
    {
        solver           smoothSolver;
        smoother         GaussSeidel;
        tolerance        1e-10;
        relTol           0.00;
        maxIter          100;
        minIter          1;
    };
    "(U|UFinal)"
    {
        solver           smoothSolver;
        smoother         symGaussSeidel;
        tolerance        1e-10;
        relTol           0.00;
        maxIter          100;
    };
}

